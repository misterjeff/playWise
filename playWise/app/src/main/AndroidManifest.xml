<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.misterjeffbrown.playwise" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/dice_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".splashScreen"
            android:label="SplashScreen" >
            <intent-filter>
                <action android:name="android.inent.action.MAIN" />

                <category android:name="android.intent.cateogry.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DiceActivity"
            android:label="@string/title_activity_dice"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.misterjeffbrown.playwise.MainActivity" />
        </activity>
        <activity
            android:name=".CardsActivity"
            android:label="@string/title_activity_cards"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.misterjeffbrown.playwise.MainActivity" />
        </activity>
        <activity
            android:name=".RangeActivity"
            android:label="@string/title_activity_range"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.misterjeffbrown.playwise.MainActivity" />
        </activity>
        <activity
            android:name=".AskActivity"
            android:label="@string/title_activity_ask"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.misterjeffbrown.playwise.MainActivity" />
        </activity>
    </application>

</manifest>
